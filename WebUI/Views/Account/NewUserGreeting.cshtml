@{
    ViewData["Title"] = "Greetings!";
}

@{
    ViewBag.NavItem = "Account";
}

@model WebUI.ViewModels.NewUserGreetingVm

<div class="col">
    <p>
        Dear @Model.Name, by clicking the below button you accept our terms of service and create a user profile.
        A user profile will enable additional services...
    </p>

    <form method="post" asp-action="NewUserGreeting">
        <input name="returnUrl" type="hidden" value="" />
        <input type="submit" value="Submit">
    </form>

</div>

@section Sidebar
{
    @await Html.PartialAsync("SidebarPartial", null)
}
