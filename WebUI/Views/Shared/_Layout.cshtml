<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Seamcarver</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body> 

    <div class="container-fluid">
        <nav class="navbar navbar-expand-sm navbar-dark">
            <a class="navbar-brand col-2" asp-controller="Ui" asp-action="Index"><img src="~/images/favicon/heart-icon-32p.png" alt=""></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            @{
                string navItem = ViewBag?.NavItem as string;                
            }

            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="nav nav-tabs mr-auto">
                    <li class="nav-item">
                        <a class="nav-link
                           @(navItem == "Image" ? "text-dark active" : "text-black-50")"
                           asp-controller="Image" asp-action="Index">Carve image</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link
                           @(navItem == "Account" ? "text-dark active" : "text-black-50")"
                           asp-controller="Account" asp-action="Info">My Account</a>
                    </li>

                </ul>
            </div>

            <div class="text-right text-nowrap">
                <partial name="_LoginPartial" />
            </div>
        </nav>


        <div class="row p-1 mt-1">
            <div id="sidebar" class="col-sm-3 col-lg-2">
                @RenderSection("Sidebar", false)
            </div>
            <div class="col-9">
                @RenderBody()
            </div>
        </div>
    </div>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
